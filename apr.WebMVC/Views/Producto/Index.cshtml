
@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <label >Lista de productos</label>
        <div>
            <button type="button" class="btn btn-sm btn-success" id="btnNuevo">
                <i class="fas fa-plus"></i>
                Nuevo
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="tblPoductos">
                <thead>
                    <tr>
                        <th></th>
                        <th>Cod</th>
                        <th>Categoria</th>
                        <th>Poducto</th>
                        <th>Presentacion</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="text-nowrap">
                                <button type="button" class="btn btn-sm btn-outline-warning border-0">
                                    <i class="fas fa-eye fa-lg"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-info border-0">
                                    <i class="fas fa-pen-alt fa-lg"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-danger border-0">
                                    <i class="fas fa-trash fa-lg"></i>
                                </button>
                            </div>
                        </td>
                        <td>1</td>
                        <td>Esaladas</td>
                        <td>Capress</td>
                        <td>Plato de entrada</td>
                        <td>6</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



@section script {
    <script src="@Url.Content("~")assets/app/js/Producto/Index.js"></script>
}