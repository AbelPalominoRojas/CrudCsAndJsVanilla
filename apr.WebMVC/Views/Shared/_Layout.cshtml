<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - Web Cs & JS Vanilla</title>

    <!-- CSS -->
    <link href="@Url.Content("~")assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="@Url.Content("~")assets/vendor/fontawesome/css/all.min.css" rel="stylesheet" />
    @RenderSection("head", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">.Net &  JS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkAjax" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Example Ajax
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLinkAjax">
                            <li>
                                @Html.ActionLink("XMLHttpRequest", "XMLHttpRequest", "ExampleAjax", null, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Fetch API", "FetchAPI", "ExampleAjax", null, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Fetch API async", "FetchAPIAsync", "ExampleAjax", null, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Categoria", "Index", "Categoria", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Producto", "Index", "Producto", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Pedido", "Index", "Pedido", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Others</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container pt-2 pb-5" id="app">

        @RenderBody()

    </div>

    <!-- JS -->
    <script src="@Url.Content("~")assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    @RenderSection("script", false)
</body>
</html>
